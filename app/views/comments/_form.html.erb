<form ng-submit="addComment(post)">
  <div class="form-group">
    <textarea class="form-control" ng-model="comment.body" placeholder="Please type your comment here"></textarea>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" ng-model="comment.author" placeholder="Your Name" />
  </div>
  <div class="form-group">
    <button class="btn btn-info" type="submit">Post Comment</button>
  </div>
</form>